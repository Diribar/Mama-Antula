<div id="tituloMasContenido">
	<h2 id="tituloDelContenido" class="fondo"><%= locals.tituloCarta || locals.encabezado && encabezado.titulo %></h2>
	<div id="contsImagenes" class="fondo">
		<% if (locals.tituloCarta || encabezado) { %>
			<% for (const contenido of contenidos) { %>
				<% if (contenido.texto || contenido.imagen) { %>
					<div class="contImagen">
