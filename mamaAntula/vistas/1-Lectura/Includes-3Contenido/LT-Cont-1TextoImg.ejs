<!-- Texto + Imagen -->
<div class="bloque bloque-<%= contenido.layout.codigo %><%- locals.cambioStatusCont ? (" " +  contenido.statusRegistro.codigo) : '' %>">
	<!-- Imagen -->
	<div class="imgLeyenda flexColAlign">
		<img class="imagen" src="/imgsEditables/<%= subCarpeta %>/<%= contenido.imagen %>">
		<% if (contenido.leyenda) { %>
			<div class="leyenda"><%= contenido.leyenda %></div>
		<% } %>
	</div>

	<% if (locals.cambioStatusCont && contenido.statusRegistro_id != aprobado_id) { %>
		<!-- Aprueba / Rechaza -->
		<%- include("REV-9ApruebaRech") %>

		<!-- Imagen del usuario que sugiriÃ³ el cambio de status -->
		<%- include("REV-9ImgUsuario", {usuario: contenido.statusSugeridoPor}) %>
	<% } %>

	<!-- Texto -->
	<div class="texto"><%- contenido.texto %></div>
</div>
