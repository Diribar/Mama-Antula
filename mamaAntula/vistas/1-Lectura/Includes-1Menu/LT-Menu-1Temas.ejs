<div id="menuTemas" class="relative">
	<!-- Ícono de menú -->
	<i class="fa-solid fa-bars mostrarClick scaleHover"></i>

	<!-- Menú de opciones -->
	<nav id="listadoTemas" class="mostrarToggle ocultar">
		<% for (const tema of temasSeccion) { %>
			<a
				href="/<%= seccionActual.url %>/<%= tema.url %>"
				class="tema <% if (tema.id == temaActual.id) { %>activo<% } %>"
				data-tema_codigo="<%= tema.codigo %>"
			>
				<%= tema.titulo %>
			</a>
		<% } %>
	</nav>
</div>
