<section id="menuTituloTema" class="flexRowAlign">
	<%- include("MN-1Temas") %>

	<% tema = temasSeccion[0] %>
	<h1 id="tituloTema"><%= tema.titulo %></h1>
</section>

<section id="contenidoTemas" class="contenido">
	<% for (const tema of temasSeccion) { %>
		<!-- Sin pesta単as -->
		<% if (!tema.pestanas.length) { %>
			<%- include("MN-3ArticCarta", {tema_id: tema.id, sonCartas: tema.codigo == "cartas"}) %>
		<% } else { %>
			<!-- Tiene pesta単as - Pesta単as -->
			<%- include("MN-2Pestanas", {tema_id: tema.id}) %>

			<!-- Tiene pesta単as - Contenido -->
			<div class="contenidoPestanas contenido">
				<% for (const pestana of tema.pestanas) { %>
					<%- include("MN-3ArticCarta", {pestana_id: pestana.id}) %>
				<% } %>
			</div>
		<% } %>
	<% } %>
</section>