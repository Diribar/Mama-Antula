<!-- Formulario -->
<form id="formEdicion">
	<input type="text" name="apodo" placeholder="Escribí tu apodo" autocomplete="off" value="<%= usuario.apodo %>">
	<input type="password" name="contrasena" placeholder="Nueva contrasena (opcional)" autofocus autocomplete="new-password">
	<select name="paisResidencia">
		<option value=''>País de residencia</option>
		<option value="AR">Argentina</option>
		</optgroup>
		<% for (const continente of continentes) { %>
			<optgroup label="<%= continente %>">
				<% for (const pais of paises.filter(n => n.continente == continente)) { %>
					<option value="<%= pais.id %>" <% if (pais.id == usuario.pais_id) { %>selected<% } %>><%= pais.nombre %></option>
				<% } %>
			</optgroup>
		<% } %>

	</select>
	<label id="contenedorNovedades" for="novedades">
		<input type="checkbox" id="novedades">
		Deseo recibir las novedades por mail
	</label>
	<p id="mensaje"></p>
	<div id="fondoConfirma">
		<button type="submit" id="confirma">Guardá los cambios</button>
	</div>
</form>
